{
    "version": 4,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 23,
        "patch": 0
    },
    "include": [ "./ConanPresets.json" ],
    "configurePresets": [
        {
            "name": "build",
            "displayName": "Build (Core Only)",
            "inherits": "conan-default"
        },
        {
            "name": "build-examples",
            "displayName": "Build (Examples)",
            "inherits": "build",
            "cacheVariables": {
                "COMPILE_EXAMPLES": true
            }
        },
        {
            "name": "build-plugins",
            "displayName": "Build (Plugins)",
            "inherits": "build",
            "cacheVariables": {
                "COMPILE_PLUGINS": true
            }
        },
        {
            "name": "build-all",
            "displayName": "Build (All)",
            "inherits": "build",
            "cacheVariables": {
                "COMPILE_EXAMPLES": true,
                "COMPILE_PLUGINS": true
            }
        }
    ],
    "buildPresets": [
        {
            "name": "debug",
            "displayName": "Debug",
            "inherits": "conan-debug"
        },
        {
            "name": "release",
            "displayName": "Release",
            "inherits": "conan-release"
        }
    ]
}